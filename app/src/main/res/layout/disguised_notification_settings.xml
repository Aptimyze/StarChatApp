<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:fontFamily="@font/font_opensansbold"
        android:id="@+id/nationality_tv"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Disguised Notifications"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />

    <com.rm.rmswitch.RMSwitch
        android:id="@+id/disguised_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checked="true"
        app:forceAspectRatio="false"
        app:enabled="true"
        app:switchDesign="android"
        app:switchBkgCheckedColor="@color/gray"
        app:switchBkgNotCheckedColor="@color/gray"
        app:switchToggleCheckedColor="@color/colorAccent"
        app:switchToggleNotCheckedColor="@color/black" />



</LinearLayout>